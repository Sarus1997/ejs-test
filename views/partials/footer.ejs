<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<!-- In your footer.ejs file -->
<style>
  .footer {
    background-color: #34495e;
    color: #ecf0f1;
    padding: 40px 0;
    font-family: 'Roboto', Arial, sans-serif;
  }

  .footer-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .footer-logo {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .footer-link {
    color: #ecf0f1;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-link:hover {
    color: #3498db;
  }

  .social-icons {
    display: flex;
    gap: 15px;
  }

  .social-icon {
    color: #ecf0f1;
    font-size: 24px;
    /* Increased font size */
    transition: all 0.3s ease;
    display: inline-block;
    /* Ensure proper display */
    width: 40px;
    /* Set a fixed width */
    height: 40px;
    /* Set a fixed height */
    line-height: 40px;
    /* Center the icon vertically */
    text-align: center;
    /* Center the icon horizontally */
    background-color: rgba(255, 255, 255, 0.1);
    /* Add a subtle background */
    border-radius: 50%;
    /* Make it circular */
  }

  .social-icon:hover {
    color: #3498db;
    transform: translateY(-3px);
    background-color: rgba(255, 255, 255, 0.2);
    /* Lighten background on hover */
  }

  .copyright {
    width: 100%;
    text-align: center;
    margin-top: 30px;
    font-size: 14px;
    color: #bdc3c7;
  }
</style>

<footer class="footer">
  <div class="footer-container">
    <div class="footer-logo">EJS Test</div>
    <div class="social-icons">
      <a href="https://www.facebook.com/" target="_blank" rel="noopener noreferrer" class="social-icon">
        <i class="fab fa-facebook-f" aria-hidden="true"></i>
        <span class="sr-only">Facebook</span>
      </a>
      <a href="https://www.instagram.com/" target="_blank" rel="noopener noreferrer" class="social-icon">
        <i class="fab fa-instagram" aria-hidden="true"></i>
        <span class="sr-only">Instagram</span>
      </a>
      <a href="https://twitter.com/" target="_blank" rel="noopener noreferrer" class="social-icon">
        <i class="fab fa-twitter" aria-hidden="true"></i>
        <span class="sr-only">Twitter</span>
      </a>
      <a href="https://www.linkedin.com/" target="_blank" rel="noopener noreferrer" class="social-icon">
        <i class="fab fa-linkedin-in" aria-hidden="true"></i>
        <span class="sr-only">LinkedIn</span>
      </a>
    </div>
    <div class="copyright">
      <p>&copy; 2023 EJS Test. All rights reserved.</p>
    </div>
  </div>
</footer>